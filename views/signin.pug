
extends includes/layout

block title
    title signin
block content
    if error
      .error= error
    div(class="registration-form")
        div(class="row")
            div(class="col-12 text-center") 
        form(action="/signin", method="post")
            div(class="row")
                div(class="col-md-2")
                div(class="col-md-8 text-center form-group align-self-center")
                    label(for="username") Nom d'utilisateur
                    input(type="text" class=(usernameError ? "is-invalid form-control" : "form-control") id="username" name="username" required)
                div(class="col-md-2")       
            div(class="row")  
                div(class="col-md-2")
                div(class="col-md-8 text-center form-group align-self-center")
                    label(for="email") Email
                    input(type="email" class=(emailError ? "is-invalid form-control" : "form-control") id="email"  name="email" required)
                div(class="col-md-2")                   
            div(class="row")    
                div(class="col-md-2")
                div(class="col-md-8 text-center form-group align-self-center")
                    label(for="password") Mot de passe
                    input(type="password" class=(passwordError ? "is-invalid form-control" : "form-control") id="password" name="password" required)
                    div(class="col-md-2")              
            div(class="row")
                div(class="col-md-2")
                div(class="col-md-8 text-center form-group")
                    button(type="submit" class="btn btn-primary") Submit
                div(class="col-md-2")